<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backround_mane"
    android:padding="24dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="24dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/second_backround2"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Регистрация"
            android:textSize="40sp"
            android:textStyle="bold"
            android:lines="1"
            android:lineSpacingExtra="5dp"
            android:layout_marginBottom="25dp"
            android:paddingTop="10dp"
            android:textColor="#37894C" />

        <!-- Имя -->
        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Имя"
            android:inputType="textPersonName"
            android:minHeight="48dp" />

        <!-- Email -->
        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Электронная почта"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <!-- Пароль -->
        <EditText
            android:id="@+id/passwordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:minHeight="48dp" />

        <!-- Кнопка регистрации -->
        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Зарегистрироваться"
            android:background="@drawable/rounded_button"
            android:textColor="#FFFF99"
            android:layout_marginTop="16dp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/goToLoginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:minHeight="48dp"
            android:paddingTop="24dp"
            android:text="Есть аккаунт? Войти"
            android:textColor="#37894C"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            />
    </LinearLayout>
</ScrollView>